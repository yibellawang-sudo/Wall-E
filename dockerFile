FROM python:3.11-slim

WORKDIR /app

RUN apt-get update && apt-get instal -y \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender-dev \
    libgomp1 \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

RUN mkdir -p uploads/images

ENV PORT=8080
EXPOSE 8080

CMD exec gunicorn --bind : $PORT --workers 1 --threads 8 --timeout 0 --worker-class sync aiBackend:app
```

**Create `.gcloudignore`:**
``` 

.env
__pycache__/
*pyc
.DS_STORE
uploads/
*.jpg
*.jpeg
*.png
venv/
